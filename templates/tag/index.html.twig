{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block body %}
    <div>
        <ul class="flex items-start flex-wrap mt-4 prose prose-h1:text-balance pt-12 mx-auto max-w-screen-lg w-full prose-p:text-black prose-p:text-lg prose-p:font-light">
            {% for tag in tags %}
                <li class="flex mx-1">
                    <a class="p-2 px-3 border-gray-800 mb-4 rounded font-medium hover:bg-transparent hover:border-gray-800 border bg-gray-400/25 text-gray-800"
                       href="{{ path('app_tag_show', {'slug': tag.slug}) }}">
                        {{ tag.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_tag_new') }}">Create new</a>
    {% endif %}
{% endblock %}
