{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex place-items-center justify-center h-dvh">
        <div class="w-full max-w-sm">
            {% if error %}
                <div class="p-4 mb-4 text-sm text-red-50 rounded-xl bg-red-500" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <div class="bg-white rounded-3xl p-6">
                <form method="post">
                    <div class="flex flex-col gap-3 mb-4">
                        <div class="relative">
                            <label for="username" class="text-xs font-medium">Email</label>
                            <input type="email" name="_username" id="username" class="w-full bg-gray-200/80 text-gray-900 mt-2 p-4 rounded-xl focus:outline-none focus:shadow-outline" autocomplete required autofocus>
                        </div>

                        <div class="relative">
                            <label for="password" class="text-xs font-medium">Password</label>
                            <input type="password" name="_password" id="password" class="w-full bg-gray-200/80 text-gray-900 mt-2 p-4 rounded-xl focus:outline-none focus:shadow-outline" autocomplete required>
                        </div>
                    </div>

                    <div class="flex gap-2 items-center mb-4">
                        <input id="checkbox" type="checkbox" name="_remember_me" class="w-4 h-4 border-gray-200 accent-black">
                        <div class="text-sm">
                            <label for="checkbox" class="text-gray-900">Remember me</label>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="w-full p-3 bg-black hover:bg-black/90 rounded-xl text-white flex place-items-center justify-center gap-2" type="submit">
                        <span>Sign in</span>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 -960 960 960" width="20" class="fill-white">
                            <path d="M665.078-450.001H210.001q-12.769 0-21.384-8.615-8.616-8.615-8.616-21.384t8.616-21.384q8.615-8.615 21.384-8.615h455.077l-206.77-206.77q-8.923-8.923-8.807-20.884.115-11.962 9.423-21.269 9.307-8.692 21.076-9 11.769-.308 21.076 9l253.615 253.615q5.615 5.615 7.923 11.846 2.308 6.23 2.308 13.461t-2.308 13.461q-2.308 6.231-7.923 11.846L501.076-201.078q-8.307 8.308-20.576 8.5-12.269.192-21.576-8.5-9.308-9.307-9.308-21.384t9.308-21.384l206.154-206.155Z"/>
                        </svg>
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
