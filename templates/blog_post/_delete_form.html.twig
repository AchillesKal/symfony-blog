<form method="post" action="{{ path('app_blog_post_delete', {'id': blog_post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog_post.id) }}">
    <button class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-xl inline-flex items-center">
        Delete
    </button>
</form>
